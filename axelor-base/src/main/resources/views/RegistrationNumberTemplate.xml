<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_6.1.xsd">

  <grid name="registration-number-template-grid" title="Registration number templates"
    model="com.axelor.apps.base.db.RegistrationNumberTemplate">
    <field name="name"/>
    <field name="validationMethodSelect"/>
  </grid>

  <form name="registration-number-template-form" title="Registration number templates"
    model="com.axelor.apps.base.db.RegistrationNumberTemplate">
    <panel name="mainPanel" title="Main Template">
      <panel showTitle="false" colSpan="12">
        <field name="name"/>
        <field name="isRequiredForCompanies"/>
        <field name="titleToDisplay"/>
        <field name="requiredSize"/>
        <field name="validationMethodSelect"/>
        <field name="useTaxNbr" title="Use tax number"/>
      </panel>
      <panel title="Short registration number" colSpan="12">
        <field name="useSiren" colSpan="12"/>
        <field name="sirenPos" showIf="useSiren"
          onChange="action-registration-number-template-group-siren-pos-on-change-check"/>
        <field name="sirenLength" showIf="useSiren"
          onChange="action-registration-number-template-group-siren-length-on-change-check"/>
      </panel>
      <panel title="Internal classification number" colSpan="12">
        <field name="useNic" colSpan="12"/>
        <field name="nicPos" showIf="useNic"
          onChange="action-registration-number-template-group-nic-pos-on-change-check"/>
        <field name="nicLength" showIf="useNic"
          onChange="action-registration-number-template-group-nic-length-on-change-check"/>
      </panel>
    </panel>
  </form>

  <action-group
    name="action-registration-number-template-group-nic-length-on-change-check">
    <action
      name="action-registration-number-template-sum-of-nicpos-niclength-not-greater-than-requiredsize-niclength-check"/>
    <action
      name="action-registration-number-template-sum-of-nicpos-niclength-not-greater-than-requiredsize-nicPos-check"/>
  </action-group>

  <action-group
    name="action-registration-number-template-group-siren-length-on-change-check">
    <action
      name="action-registration-number-template-sum-of-sirenpos-sirenlength-not-greater-than-requiredsize-sirenlength-check"/>
    <action
      name="action-registration-number-template-sum-of-sirenpos-sirenlength-not-greater-than-requiredsize-sirenPos-check"/>
  </action-group>

  <action-group
    name="action-registration-number-template-group-siren-pos-on-change-check">
    <action
      name="action-registration-number-template-sirenpos-not-greater-than-requiredsize-check"/>
    <action
      name="action-registration-number-template-sum-of-sirenpos-sirenlength-not-greater-than-requiredsize-sirenPos-check"/>
    <action name="action-registration-number-template-group-siren-length-on-change-check"/>
  </action-group>

  <action-group
    name="action-registration-number-template-group-nic-pos-on-change-check">
    <action
      name="action-registration-number-template-nicpos-not-greater-than-requiredsize-check"/>
    <action
      name="action-registration-number-template-sum-of-nicpos-niclength-not-greater-than-requiredsize-nicPos-check"/>
    <action name="action-registration-number-template-group-nic-length-on-change-check"/>
  </action-group>

  <action-condition
    name="action-registration-number-template-sirenpos-not-greater-than-requiredsize-check">
    <check
      error="Starting position in the registration number should be less than the required size."
      field="sirenPos" if="sirenPos > requiredSize"/>
  </action-condition>

  <action-condition
    name="action-registration-number-template-nicpos-not-greater-than-requiredsize-check">
    <check
      error="Starting position in the registration number should be less than the required size."
      field="nicPos" if="nicPos > requiredSize"/>
  </action-condition>

  <action-condition
    name="action-registration-number-template-sum-of-sirenpos-sirenlength-not-greater-than-requiredsize-sirenPos-check">
    <check
      error="The sum of the starting position in the registration number and length should not be greater than the required size."
      field="sirenPos" if="sirenPos + sirenLength > requiredSize + 1"/>
  </action-condition>

  <action-condition
    name="action-registration-number-template-sum-of-nicpos-niclength-not-greater-than-requiredsize-nicPos-check">
    <check
      error="The sum of the starting position in the registration number and length should not be greater than the required size."
      field="nicPos" if="nicPos + nicLength > requiredSize + 1"/>
  </action-condition>

  <action-condition
    name="action-registration-number-template-sum-of-sirenpos-sirenlength-not-greater-than-requiredsize-sirenlength-check">
    <check
      error="The sum of the starting position in the registration number and length should not be greater than the required size."
      field="sirenLength" if="sirenPos + sirenLength > requiredSize + 1"/>
  </action-condition>

  <action-condition
    name="action-registration-number-template-sum-of-nicpos-niclength-not-greater-than-requiredsize-niclength-check">
    <check
      error="The sum of the starting position in the registration number and length should not be greater than the required size."
      field="nicLength" if="nicPos + nicLength > requiredSize + 1"/>
  </action-condition>

</object-views>