<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_6.1.xsd">

    <grid name="address-registration-number-template-grid" title="Registration number templates"
          model="com.axelor.apps.base.db.RegistrationNumberTemplate">
        <field name="isRequiredForCompanies" title="Required for companies" required="true"/>
        <field name="titleToDisplay" required="true"/>
        <field name="requiredSize" />
        <field name="validationMethodSelect"  />

        <field name="useSiren" title = "Use short registration number" />
        <field name="sirenPos" title="Starting position in the registration number"/>
        <field name="sirenLength"  title="Length" />

        <field name="useNic" title="Use internal classification number"/>
        <field name="nicPos" title="Starting position in the registration number"/>
        <field name="nicLength" title="Length"/>
    </grid>

    <form name="address-registration-number-template-form" title="Registration number templates"
          model="com.axelor.apps.base.db.RegistrationNumberTemplate">
        <panel name="mainPanel" title="Address Template">
            <field name="isRequiredForCompanies" title="Required for companies" required="true"/>
            <field name="titleToDisplay" required="true"/>
            <field name="requiredSize" />
            <field name="validationMethodSelect"  />

            <panel title="Short registration number">
                <field name="useSiren" title = "Use short registration number" />
                <field name="sirenPos" title="Starting position in the registration number" showIf="useSiren"/>
                <field name="sirenLength"  title="Length" showIf="useSiren"/>
            </panel>

            <panel title="Internal classification number">
                <field name="useNic" title="Use internal classification number"/>
                <field name="nicPos" title="Starting position in the registration number" showIf="useNic"/>
                <field name="nicLength" title="Length" showIf="useNic"/>
            </panel>

        </panel>
    </form>


</object-views>