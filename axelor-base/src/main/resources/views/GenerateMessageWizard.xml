<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_6.1.xsd">

  <form name="generate-message-wizard-form" model="com.axelor.utils.db.Wizard"
    id="base-generate-message-wizard-form" title="Generate message"
    onNew="action-generate-message-group-on-new">
    <panel name="mainPanel">
      <field name="localization" title="Localization" widget="SuggestBox" type="MANY_TO_ONE"
        target="com.axelor.apps.base.db.Localization" target-name="name"
        form-view="localization-form" grid-view="localization-grid"
        onChange="action-on-change-localization-template"/>
      <field name="_xTemplate" title="Template" widget="SuggestBox" type="MANY_TO_ONE"
        target="com.axelor.message.db.Template" target-name="name" form-view="template-form"
        grid-view="template-grid" onSelect="action-method-template-domain"/>
      <spacer name="localizationSpacer"/>
      <button name="validateBtn" title="Validate"
        onClick="save, action-generate-message-method-generate-message"/>
    </panel>
  </form>

  <action-attrs name="action-on-change-localization-template">
    <attribute for="_xTemplate" name="value" expr="eval: null"/>
  </action-attrs>

  <action-method name="action-method-template-domain" if-module="axelor-base">
    <call class="com.axelor.apps.base.web.GenerateMessageController" method="templateDomain"/>
  </action-method>

</object-views>