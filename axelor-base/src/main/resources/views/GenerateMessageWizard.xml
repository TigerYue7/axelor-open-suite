<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_6.1.xsd">

  <form name="generate-message-wizard-form" model="com.axelor.utils.db.Wizard"
    id="base-generate-message-wizard-form" title="Generate message"
    onNew="action-generate-message-group-on-new" extension="true">

    <extend target="//panel[@name='mainPanel']/field[@name='language']">
      <attribute name="name" value="localization"/>
      <attribute name="title" value="Localization"/>
      <attribute name="target" value="com.axelor.apps.base.db.Localization"/>
      <attribute name="onChange" value="action-on-change-localization-template"/>
    </extend>
    <extend target="//panel[@name='mainPanel']/spacer[@name='languageSpacer']">
      <attribute name="name" value="localizationSpacer"/>
    </extend>

  </form>

  <action-attrs name="action-on-change-localization-template">
    <attribute for="_xTemplate" name="value" expr="eval: null"/>
  </action-attrs>

  <action-method name="action-method-template-domain" if-module="axelor-base">
    <call class="com.axelor.apps.base.web.GenerateMessageController" method="templateDomain"/>
  </action-method>

</object-views>