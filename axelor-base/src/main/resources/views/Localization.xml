<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_6.1.xsd">

  <grid name="localization-grid" title="Localization"
    model="com.axelor.apps.base.db.Localization">
    <field name="name" title="Name" required="true"/>
    <field name="code" title="Code" required="true"/>
    <field name="language" ref="com.axelor.apps.base.db.Language" title="Language"/>
    <field name="dataFormat" title="Data Format" help="DD/MM/YYYY"/>
    <field name="numbersFormat" title="Numbers Format" help="#,###.00"/>
  </grid>

  <form name="localization-form" title="Localization"
    model="com.axelor.apps.base.db.Localization">
    <panel name="mainPanel" colSpan="12">
      <field name="name" title="Name" required="true" colSpan="4"/>
      <field name="code" title="Code" required="true" colSpan="4"/>
      <field name="language" ref="com.axelor.apps.base.db.Language" title="Language"
        colSpan="4"/>
      <field name="dataFormat" title="Data Format" help="DD/MM/YYYY" colSpan="4"/>
      <field name="numbersFormat" title="Numbers Format" help="#,###.00" colSpan="4"/>
    </panel>
  </form>
</object-views>