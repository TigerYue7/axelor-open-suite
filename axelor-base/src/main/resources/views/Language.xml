<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_6.1.xsd">

  <grid name="language-grid" title="Languages" model="com.axelor.apps.base.db.Language"
    editable="true">
    <field name="name"/>
    <field name="code" onChange="action-language-method-convert-to-lowercase"/>
  </grid>

  <form name="language-form" title="Language" model="com.axelor.apps.base.db.Language">
    <panel name="mainPanel">
      <field name="name"/>
      <field name="code" onChange="action-language-method-convert-to-lowercase"/>
    </panel>
  </form>

  <action-method name="action-language-method-convert-to-lowercase">
    <call class="com.axelor.apps.base.web.LanguageController" method="convertToLowercase"/>
  </action-method>

</object-views>